<Page x:Class="DMPS.Client.Presentation.Views.Pages.PrintPreviewView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DMPS.Client.Presentation.Views.Pages"
      xmlns:vm="clr-namespace:DMPS.Client.Presentation.ViewModels.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=vm:PrintPreviewViewModel}"
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="PrintPreviewView">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <!-- Main Content: Preview and Header -->
        <DockPanel Grid.Column="0">
            <StackPanel DockPanel.Dock="Top" Margin="0 0 16 16">
                <TextBlock Text="Print Preview" Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                <TextBlock Text="{Binding PatientInfo}" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Foreground="{DynamicResource MaterialDesignBodyLightTextBlock}"/>
            </StackPanel>

            <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" Background="{DynamicResource MaterialDesignDivider}" Margin="0 0 16 0">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <!-- This would be a more complex control to render the print layout -->
                    <Border Width="595" Height="842" Background="White" Effect="{StaticResource MaterialDesignShadowDepth1}">
                        <TextBlock Text="[Print Preview Area]" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
                    </Border>
                </ScrollViewer>
            </Border>
        </DockPanel>

        <!-- Right Sidebar: Settings -->
        <materialDesign:Card Grid.Column="1" Padding="16">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Print Settings" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0 0 0 16"/>

                    <!-- Printer Selection -->
                    <ComboBox materialDesign:HintAssist.Hint="Printer"
                              ItemsSource="{Binding AvailablePrinters}"
                              SelectedItem="{Binding SelectedPrinter}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    </ComboBox>

                    <!-- Layout Templates -->
                    <ComboBox materialDesign:HintAssist.Hint="Layout Template"
                              ItemsSource="{Binding LayoutTemplates}"
                              SelectedItem="{Binding SelectedLayoutTemplate}"
                              Margin="0 16 0 0"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    </ComboBox>
                    
                    <!-- Page Orientation -->
                    <TextBlock Text="Orientation" Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Margin="0 24 0 8"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Portrait" IsChecked="{Binding IsPortrait}" GroupName="Orientation" Margin="0 0 16 0"/>
                        <RadioButton Content="Landscape" IsChecked="{Binding IsLandscape}" GroupName="Orientation"/>
                    </StackPanel>

                    <!-- Page Margins -->
                    <Slider materialDesign:HintAssist.Hint="Margins (mm)"
                            Minimum="5" Maximum="20"
                            Value="{Binding PageMargins}"
                            Margin="0 16 0 0"/>

                    <!-- Image Scaling -->
                    <TextBlock Text="Image Scaling" Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Margin="0 24 0 8"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Fit to Page" IsChecked="{Binding IsFitToPage}" GroupName="Scaling" Margin="0 0 16 0"/>
                        <RadioButton Content="Actual Size" IsChecked="{Binding IsActualSize}" GroupName="Scaling"/>
                    </StackPanel>

                    <!-- Branding and Overlays -->
                    <Expander Header="Branding &amp; Overlays" Margin="0 24 0 0">
                        <StackPanel>
                            <Button Content="Upload Logo" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0 8"/>
                            <TextBox materialDesign:HintAssist.Hint="Custom Header Text" Margin="0 8"
                                     Text="{Binding HeaderText}"/>
                            <TextBox materialDesign:HintAssist.Hint="Custom Footer Text" Margin="0 8"
                                     Text="{Binding FooterText}"/>
                        </StackPanel>
                    </Expander>

                    <!-- De-identification -->
                    <Expander Header="De-identification" Margin="0 16 0 0">
                        <StackPanel>
                            <ComboBox materialDesign:HintAssist.Hint="Apply Mask Template"
                                      ItemsSource="{Binding MaskTemplates}"
                                      SelectedItem="{Binding SelectedMaskTemplate}"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                        </StackPanel>
                    </Expander>

                    <!-- Action Buttons -->
                    <Grid Margin="0 32 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" ToolTip="Email"
                                Command="{Binding EmailCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}">
                            <materialDesign:PackIcon Kind="Email"/>
                        </Button>
                        <Button Grid.Column="1" ToolTip="Export as PDF" Margin="8 0"
                                Command="{Binding ExportPdfCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}">
                            <materialDesign:PackIcon Kind="FilePdfBox"/>
                        </Button>
                        <Button Grid.Column="2" ToolTip="Print"
                                Command="{Binding PrintCommand}"
                                IsEnabled="{Binding IsPrintServiceAvailable}"
                                Style="{StaticResource MaterialDesignRaisedButton}">
                            <materialDesign:PackIcon Kind="Printer"/>
                        </Button>
                    </Grid>

                    <TextBlock Text="Print Service Unavailable"
                               Visibility="{Binding IsPrintServiceAvailable, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}"
                               HorizontalAlignment="Center" Margin="0 8 0 0"
                               Foreground="{DynamicResource MaterialDesignWarningBrush}"/>

                </StackPanel>
            </ScrollViewer>
        </materialDesign:Card>
    </Grid>
</Page>