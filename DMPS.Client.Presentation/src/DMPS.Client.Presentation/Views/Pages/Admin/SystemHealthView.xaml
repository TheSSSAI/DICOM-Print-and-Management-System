<Page x:Class="DMPS.Client.Presentation.Views.Pages.Admin.SystemHealthView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DMPS.Client.Presentation.Views.Pages.Admin"
      xmlns:vm="clr-namespace:DMPS.Client.Presentation.ViewModels.Pages.Admin"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=vm:SystemHealthViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SystemHealthView">
    <Page.Resources>
        <Style TargetType="materialDesign:Card" x:Key="HealthStatusCard">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="UniformCornerRadius" Value="8"/>
            <Setter Property="MinWidth" Value="200"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="HealthStatusTitle" BasedOn="{StaticResource MaterialDesignSubtitle1TextBlock}">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 0 0 4"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="HealthStatusValue" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Page.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="0 0 0 16" Orientation="Horizontal">
            <TextBlock Text="System Health Dashboard" Style="{StaticResource MaterialDesignHeadline5TextBlock}" VerticalAlignment="Center"/>
            <Button Command="{Binding RefreshStatusCommand}" Style="{StaticResource MaterialDesignToolButton}" Margin="8 0 0 0" ToolTip="Refresh Status">
                <materialDesign:PackIcon Kind="Refresh"/>
            </Button>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel>
                <!-- Windows Service Status -->
                <materialDesign:Card Style="{StaticResource HealthStatusCard}">
                    <StackPanel>
                        <TextBlock Text="Background Service" Style="{StaticResource HealthStatusTitle}"/>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" Foreground="Green" VerticalAlignment="Center" Margin="0 0 8 0"
                                                     Visibility="{Binding HealthStatus.IsServiceRunning, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <materialDesign:PackIcon Kind="Error" Foreground="Red" VerticalAlignment="Center" Margin="0 0 8 0"
                                                     Visibility="{Binding HealthStatus.IsServiceRunning, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}"/>
                            <TextBlock Text="{Binding HealthStatus.ServiceStatusText}" Style="{StaticResource HealthStatusValue}"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- PostgreSQL Connectivity -->
                <materialDesign:Card Style="{StaticResource HealthStatusCard}">
                    <StackPanel>
                        <TextBlock Text="PostgreSQL DB" Style="{StaticResource HealthStatusTitle}"/>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" Foreground="Green" VerticalAlignment="Center" Margin="0 0 8 0"
                                                     Visibility="{Binding HealthStatus.IsDbConnected, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <materialDesign:PackIcon Kind="Error" Foreground="Red" VerticalAlignment="Center" Margin="0 0 8 0"
                                                     Visibility="{Binding HealthStatus.IsDbConnected, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}"/>
                            <TextBlock Text="{Binding HealthStatus.DbStatusText}" Style="{StaticResource HealthStatusValue}"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- RabbitMQ Connectivity -->
                <materialDesign:Card Style="{StaticResource HealthStatusCard}">
                    <StackPanel>
                        <TextBlock Text="RabbitMQ Broker" Style="{StaticResource HealthStatusTitle}"/>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" Foreground="Green" VerticalAlignment="Center" Margin="0 0 8 0"
                                                     Visibility="{Binding HealthStatus.IsMessageQueueConnected, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <materialDesign:PackIcon Kind="Error" Foreground="Red" VerticalAlignment="Center" Margin="0 0 8 0"
                                                     Visibility="{Binding HealthStatus.IsMessageQueueConnected, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}"/>
                            <TextBlock Text="{Binding HealthStatus.MessageQueueStatusText}" Style="{StaticResource HealthStatusValue}"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Main Queue -->
                <materialDesign:Card Style="{StaticResource HealthStatusCard}">
                    <StackPanel>
                        <TextBlock Text="Main Queue Messages" Style="{StaticResource HealthStatusTitle}"/>
                        <TextBlock Text="{Binding HealthStatus.MainQueueMessageCount}" Style="{StaticResource HealthStatusValue}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Dead-Letter Queue -->
                <materialDesign:Card Style="{StaticResource HealthStatusCard}">
                    <StackPanel>
                        <TextBlock Text="Dead-Letter Messages" Style="{StaticResource HealthStatusTitle}"/>
                         <TextBlock Text="{Binding HealthStatus.DeadLetterQueueMessageCount}" Style="{StaticResource HealthStatusValue}"
                                    FontWeight="Bold"
                                    Foreground="{Binding HealthStatus.DlqWarningBrush}"/>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Disk Space -->
                <materialDesign:Card Style="{StaticResource HealthStatusCard}">
                    <StackPanel>
                        <TextBlock Text="Storage Available" Style="{StaticResource HealthStatusTitle}"/>
                         <TextBlock Text="{Binding HealthStatus.StorageAvailableText}" Style="{StaticResource HealthStatusValue}"
                                    Foreground="{Binding HealthStatus.DiskSpaceWarningBrush}"/>
                    </StackPanel>
                </materialDesign:Card>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>