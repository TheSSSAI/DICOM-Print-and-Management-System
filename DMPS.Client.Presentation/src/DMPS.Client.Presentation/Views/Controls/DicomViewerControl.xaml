<UserControl x:Class="DMPS.Client.Presentation.Views.Controls.DicomViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DMPS.Client.Presentation.Views.Controls"
             xmlns:vm="clr-namespace:DMPS.Client.Presentation.ViewModels.Controls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:DicomViewerViewModel}"
             d:DesignHeight="450" d:DesignWidth="800"
             Focusable="True"
             ClipToBounds="True"
             Background="Black">
    <Grid>
        <Image x:Name="DicomImage"
               Stretch="Uniform"
               RenderOptions.BitmapScalingMode="HighQuality">
            <Image.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="{Binding Scale}" ScaleY="{Binding Scale}" />
                    <RotateTransform Angle="{Binding Rotation}" />
                </TransformGroup>
            </Image.LayoutTransform>
        </Image>
        
        <!-- Overlays can be added here, e.g., for annotations, measurements, or loading indicators -->
        <ProgressBar IsIndeterminate="True" 
                     Width="50" Height="50"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</UserControl>